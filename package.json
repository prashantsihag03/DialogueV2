{
  "name": "dialoguev2",
  "version": "1.0.0",
  "description": "Second version to Dialogue Chat application primarliy developed to gain hands-on experience with certain tools and technologies.",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "purgeDynamodb": "sh ./dev/scripts/purgeTable.sh",
    "setupDynamodb": "sh ./dev/scripts/setupTable.sh",
    "lint": "eslint .",
    "watch": "NODE_ENV=development nodemon -r dotenv/config index.ts",
    "build": "rm -rf build/*; tsc; cp -r public ./build/public; mkdir ./build/uploads",
    "start": "NODE_ENV=production node ./build/index.js",
    "dbClean": "npm run purgeDynamodb && npm run setupDynamodb",
    "dockerfile": "npm run build; docker build -t dialogue-app-v2 .",
    "dockerClean": "cd ./dev/db; docker-compose down; docker rmi db-dialogue-v2-app:latest",
    "docker": "npm run build; cd ./dev/db; docker compose up -d"
  },
  "keywords": [],
  "author": "Prashant Sihag",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.421.0",
    "@aws-sdk/client-s3": "^3.468.0",
    "@aws-sdk/lib-dynamodb": "^3.421.0",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "file-type": "^18.7.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "npm": "^10.2.5",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0",
    "web-push": "^3.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^18.11.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/web-push": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
